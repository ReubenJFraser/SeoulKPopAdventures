<!-- modal.ejs: Dynamic Modal Component -->

<!-- Import Custom Button Component -->
<script src="/images/google_material/custom_components/buttons/elevated-button.js" defer></script>

<div id="bulmaMapModal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <!-- Modal Header -->
        <header class="modal-card-head">
            <p id="modal-title" class="modal-card-title">Details</p>
            <button class="delete" aria-label="close" id="closeModalButton"></button>
        </header>

        <!-- Modal Body -->
        <section class="modal-card-body">
            <div id="modal-content">
                <p id="modal-description">Loading...</p>
                
                <!-- Ratings Section -->
                <div id="tripadvisor-container"></div>
                <div id="michelin-container"></div>
                
                <!-- Additional Information -->
                <div id="restaurant-cuisine"></div>
                <div id="restaurant-hours"></div>
                <div id="restaurant-awards"></div>
            </div>
        </section>

        <!-- Bottom App Bar -->
        <footer class="modal-card-foot">
            <div class="bottom-app-bar">
                <!-- Read More Button -->
                <elevated-button class="read-more-button" onclick="expandRestaurantModal()">
                    Read More
                </elevated-button>

                <!-- Zoom Slider (Center) -->
                <input type="range" class="zoom-slider" min="1" max="10" step="1">

                <!-- Floating Action Button (FAB) for Sidebar -->
                <button class="fab-button" onclick="toggleSidebar()">â˜°</button>
            </div>
        </footer>
    </div>
</div>

